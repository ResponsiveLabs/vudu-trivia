<div class="row">
  <div class="four columns centered">
  </div>
</div>

<div class="row">
  <div class="twelve columns">
    <h2><%=t '.slogan' %></h2>
  </div>
</div>

<br />

<section id="get-started">
  <div class="row">
    <div class="four columns centered">
      <%= form_for(Game.new) do |f| %>
        <%= f.submit t('.play'), class: "large button" %>
      <% end %>
    </div>
  </div>
</section>

<br />

<div class="row">
  <div class="ten columns centered">
    <p><%=t '.teaser_title' %></p>
  </div>
</div>

<br />

<div class="row">
  <div class="ten columns centered">
    <p><%=t '.teaser_message' %></p>
  </div>
</div>

<br />

<div class="row">
  <div class="four columns">
    <img src="http://placehold.it/200x160" />
  </div>
  <div class="four columns">
    <img src="http://placehold.it/200x160" />
  </div>
  <div class="four columns">
    <img src="http://placehold.it/200x160" />
  </div>
</div>

<br />

<div class="row">
  <div class="ten columns centered">
  </div>
</div>

<div class="row">
  <div class="eight columns centered">

    <div class="row">
      <div class="twelve columns">
        <p><%=t '.friends_playing', :count => @friends_using_app.size %></p>
      </div>
    </div>

    <div class="row">
      <% @friends[0..4].each do |friend_result| %>
        <div class="two columns">
          <% id, name = friend_result['id'], friend_result['name'] %>
          <% pic_url = "https://graph.facebook.com/#{id}/picture?type=small" %>
          <img src='<%= pic_url %>' alt='<%= name %>' />
        </div>
      <% end %>
      <div class="two columns">
        <a class="button" href="#"><%=t '.invite' %></a>
      </div>
    </div>

    <div class="row">
      <div class="twelve columns">
        <p><%=t '.visit_html' %></p>
      </div>
    </div>

  </div>
</div>

