<br /><br />

<div class="row">
  <div class="ten columns">
    <% if @answered_right %>
      <h3><%= t('.correct') %></h3>
      <p><%= @question.explanation %></p>
    <% else %>
      <h3><%= t('.incorrect') %></h3>
    <% end %>
  </div>
  <div class="two columns">
    <% link_title = (@index + 1) < @game.questions.size ? t('.next') : t('.finish') %>
    <%= link_to link_title, next_path(@game.id), class: 'button' %>
  </div>
</div>
